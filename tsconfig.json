{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false, // prefer true
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
